    auth="Container"                             	数据源提供者
    maxActive="20"                               	最大活动数
    maxWait="10000"                              	最大等待时间
    maxIdle="5"                                  	最大空闲数
    username="waggag"                            	用户名
    password="225514"                            	密码
    driverClassName="com.mysql.cj.jdbc.Driver"   	驱动类
    url="jdbc:mysql://localhost:3306/ssm"        	连接url字符串
 />
 -->
    <Resource
            name="jdbc/ssm"
