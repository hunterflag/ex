<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tw.idv.hunterchen.lab.mapper.UserMapper">
	<select id="selectOneById" parameterType="int" resultType="User">
		select id, name, created_time, modified_time from `user` where id = #{id}
    </select>
    
    <select id="selectAllByName" parameterType="String" resultType="" >
    	SELECT * FROM `user` WHERE name = #{name}
    </select>
    
    <insert id="insert" >
    	INSERT INTO user (name) values (#{name})
    	<selectKey keyColumn="name" keyProperty="name" resultType="int" order="AFTER">
    		SELECT last_insert_id()
    	</selectKey>
     </insert>
    
</mapper>