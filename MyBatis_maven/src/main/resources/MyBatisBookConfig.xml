<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 略寫法 x2 擇一 -->
	<typeAliases>
		<package name="tw.idv.hunterchen.lab.model"/>
		<!-- a.統一套件法 -->	
		<!-- 
		<package name="tw.idv.hunterchen.model"/>
		 -->

		<!-- b.個別命名法 -->
		<!-- 
		<typeAlias alias="Country" type="tw.idv.hunterchen.lab.model.Country" />
		<typeAlias alias="Member" type="tw.idv.hunterchen.lab.model.Member" />
		<typeAlias alias="User"
			type="tw.idv.hunterchen.lab.model.User" />
		 -->		
	</typeAliases>

	<environments default="localhostMySQL">

		<environment id="localhostMySQL">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" 	value="com.mysql.cj.jdbc.Driver" />
				<property name="url" 		value="jdbc:mysql://localhost:3306/labDB" />
				<property name="username" 	value="developer" />
				<property name="password" 	value="developer" />
			</dataSource>
		</environment>

		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" 	value="com.mysql.cj.jdbc.Driver" />
				<property name="url" 		value="jdbc:mysql://192.168.100.195:3306/labDB" />
				<property name="username" 	value="hunter" />
				<property name="password" 	value="hunter" />
			</dataSource>
		</environment>

		<!-- JNDI mybatis 环境的配置 -->
		<environment id="jndiLocalhostMysql">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="JNDI">
				<property name="data_source" value="java:comp/env/jdbc/ssm" />
				<!-- 
					name="data_source" 是固定的 keyword  
					value="java:comp/env/jdbc/ssm" 中,
						java:comp/env/ 是固定寫法, 
						jdbc/ssm 則是 數據源名稱, 必須與 定義區的名稱 一致
				-->
			</dataSource>
		</environment>

	</environments>

	<!-- 映射區 : 
		每個 <mapper> 表示 1 個 DAO
		有哪些 XxxMapper.xml? 
	 -->
	<mappers>
		
		<!-- // power by http://www.gitbook.net -->
		<!-- 寫法.a. 逐一表列每個 XxxMapper.xml 
			根路徑為 classpath
			根路徑實際位置: 專案資料夾/src/main/java/  
		-->
		<mapper	resource="tw/idv/hunterchen/lab/mapper/CountryMapper.xml" />
		
		<!-- 寫法.b. 說明擁有 XxxMapper.java 的套件
			會自動掃描該套件下的 class, 
			依照格式寫的 class, 均會自動建立 DAO 
		-->
	</mappers>
</configuration>