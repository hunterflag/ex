<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias alias="Member"
			type="tw.idv.hunterchen.lab.model.Member" />
		<typeAlias alias="User"
			type="tw.idv.hunterchen.lab.model.User" />
	</typeAliases>

	<environments default="localhostMySQL">

		<environment id="localhostMySQL">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.cj.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql://localhost:3306/labDB" />
				<property name="username" value="developer" />
				<property name="password" value="developer" />
			</dataSource>
		</environment>

		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.cj.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql://192.168.100.195:3306/labDB" />
				<property name="username" value="hunter" />
				<property name="password" value="hunter" />
			</dataSource>
		</environment>

		<!-- JNDI mybatis 环境的配置 -->
		<environment id="jndiLocalhostMysql">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="JNDI">
				<property name="data_source" value="java:comp/env/jdbc/ssm" />
				<!-- name 是固定的 keyword  
					value="java:comp/env/jdbc/ssm" 中,
					java:comp/env/ 是固定寫法, jdbc/ssm 則是 數據源名稱, 必須與 定義區的名稱 一致
					
				-->
			</dataSource>
		</environment>

	</environments>

	<mappers>
		<!-- // power by http://www.gitbook.net -->
		<mapper
			resource="tw/idv/hunterchen/lab/mapper/MemberMapper.xml" />
		<!-- <mapper resource="tw/idv/hunterchen/lab/mapper/UserMapper.xml" /> -->
		<package name="tw.idv.hunterchen.lab.dao" />
	</mappers>
</configuration>